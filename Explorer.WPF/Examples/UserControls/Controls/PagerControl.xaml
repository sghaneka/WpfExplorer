<UserControl x:Class="Explorer.WPF.Examples.UserControls.Controls.PagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="rootControl"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="118">
    <WrapPanel Margin="0" Width="115">
        <TextBlock Text="Page " />
        <TextBlock Text="{Binding ElementName=rootControl, Path=Current}"/>
        <TextBlock Text=" of "/>
        <TextBlock Text="{Binding ElementName=rootControl, Path=Total}" />
    </WrapPanel>
</UserControl>
